<div>
  <div class="mb-10" style="font-size: 18px"><%= issue.tracker %> #<%= issue.id %></div>
  <h1 class="mb-10"><%= issue.subject %></h1>
  <div class="mb-10"><%= format_time issue.created_on %> - <%= issue.author %></div>
</div>

<div class="mb-30 wrapper-info">
  <table cellpadding="7" style="border: 1px solid #000;">

    <tr>
      <th width="15%">
        Status:
      </th>
      <td width="35%">
        <%= issue.status %>
      </td>
      <th width="15%">
        Start date:
      </th>
      <td width="35%">
        <%= format_date issue.start_date %>
      </td>
    </tr>

    <tr>
      <th> Priority:</th>
      <td> <%= issue.priority %></td>
      <th>Due date:</th>
      <td> <%= format_date issue.due_date %></td>
    </tr>

    <tr>
      <th>Assignee:</th>
      <td> <%= issue.assigned_to %></td>
      <th>% Done:</th>
      <td> <%= issue.done_ratio %>%</td>
    </tr>

    <tr>
      <th> Category:</th>
      <td> <%= issue.category %></td>
      <th>Estimated time:</th>
      <td>  <%= issue.estimated_hours %></td>
    </tr>

  <%= render_custom_fields_rows(issue) %>


    <tr class="border-top">
      <td colspan="4" class="p-0">
        <table width="100%">
          <tr>
            <td>
              <b>Description</b>
            </td>
          </tr>

          <tr>
            <td>
              <%= textilizable issue, :description, :attachments => issue.attachments %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>